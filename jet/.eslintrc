{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  "globals": {
    "google": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "require-atomic-updates": 0,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "indent": 0,
    "no-console": "warn",
    "no-debugger": "warn"
  }
}
